{
    "name": "Dataverse Dev Container",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
      "vscode": {
        "extensions": [
          "mhutchie.git-graph",
          "bierner.markdown-mermaid",
          "danish-naglekar.power-platform-extension-pack",
          "ms-vscode.PowerShell"
